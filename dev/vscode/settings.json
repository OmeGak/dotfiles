{
    "[html]": {
        "editor.wordWrap": "off"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jinja-html]": {
        "editor.wordWrap": "off"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.language.colorizedBracketPairs": [
            [
                "[",
                "]"
            ]
        ],
        "editor.quickSuggestions": {
            "comments": "off",
            "other": "off",
            "strings": "off"
        },
        "editor.snippetSuggestions": "none",
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.wordWrap": "off"
    },
    "[restructuredtext]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "other": "off",
            "strings": "off"
        }
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "autoDocstring.docstringFormat": "sphinx-notypes",
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.language": "en,es-ES,fr",
    "cSpell.showStatus": false,
    "cSpell.userWords": [
        "cryptoeconomic",
        "cryptoeconomics"
    ],
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.toolBarLocation": "docked",
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.renderSideBySide": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorBlinking": "smooth",
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Source Code Pro",
    "editor.fontSize": 14,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.renderWhitespace": "selection",
    "editor.rulers": [
        80,
        120
    ],
    "editor.stickyScroll.enabled": true,
    "editor.suggest.preview": true,
    "editor.useTabStops": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.wrappingIndent": "indent",
    "emmet.includeLanguages": {
        "jinja-html": "html",
        "njk": "html"
    },
    "errorLens.enabled": true,
    "errorLens.followCursor": "activeLine",
    "errorLens.statusBarIconsAtZero": "hide",
    "explorer.autoReveal": "focusNoScroll",
    "explorer.decorations.colors": false,
    "explorer.excludeGitIgnore": true,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        ".html": "html",
        ".pylintrc": "ini"
    },
    "files.defaultLanguage": "markdown",
    "files.exclude": {
        "**/__pycache__": true
    },
    "files.hotExit": "onExitAndWindowClose",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.enableStatusBarSync": false,
    "git.mergeEditor": false,
    "git.rebaseWhenSync": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressCreatePullRequestPrompt": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitDisabledWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressRebaseSwitchToTextWarning": false
    },
    "gitlens.autolinks": [
        {
            "prefix": "IND2-",
            "url": "https://rtce-jira.unog.ch/browse/IND2-<num>"
        }
    ],
    "gitlens.blame.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],
    "gitlens.changes.locations": [
        "gutter",
        "overview"
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.heatmap.locations": [
        "overview",
        "gutter"
    ],
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.plusFeatures.enabled": false,
    "gitlens.views.worktrees.files.layout": "list",
    "gitlens.views.worktrees.showBranchComparison": "branch",
    "latex-workshop.view.pdf.viewer": "tab",
    "lineJumper.linesToJump": 5,
    "liveshare.focusBehavior": "prompt",
    "liveshare.guestApprovalRequired": true,
    "liveshare.presence": false,
    "liveshare.sharedTerminalHeight": 100,
    "liveshare.showInStatusBar": "whileCollaborating",
    "markdown-preview-enhanced.chromePath": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
    "markdown-preview-enhanced.enableEmojiSyntax": false,
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "markdown.extension.toc.levels": "2..2",
    "markdown.marp.chromePath": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
    "markdown.validate.enabled": true,
    "markdown.validate.referenceLinks.enabled": "ignore",
    "material-icon-theme.saturation": 0,
    "materialTheme.accent": "Tomato", // #F44336
    "mypy-type-checker.args": [
        // Workaround for extension bug (https://github.com/microsoft/vscode-mypy/issues/105)
        "--follow-imports=normal"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": false,
    "redhat.telemetry.enabled": false,
    "rewrap.wrappingColumn": 120,
    "search.decorations.badges": false,
    "search.decorations.colors": false,
    "search.exclude": {
        "**/.venv": true,
        "**/*.code-search": false
    },
    "search.followSymlinks": false,
    "search.useGlobalIgnoreFiles": true,
    "security.workspace.trust.untrustedFiles": "open",
    "shellcheck.customArgs": [
        "-x"
    ],
    "telemetry.telemetryLevel": "error",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.general.tags": [
        "HACK",
        "FIXME",
        "TODO",
        "XXX"
    ],
    "todo-tree.highlights.highlightDelay": 0,
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.tree.flat": true,
    "todo-tree.tree.groupedByTag": true,
    "todo-tree.tree.scanMode": "workspace only",
    "todo-tree.tree.showBadges": false,
    "todo-tree.tree.showCountsInTree": true,
    "vs-kubernetes": {
        "disable-linters": [
            "resource-limits"
        ]
    },
    "vscodeWorkspaceSwitcher.paths": [
        "~/Code",
        "~/Documents/Dendron"
    ],
    "vscodeWorkspaceSwitcher.showInExplorer": false,
    "vscodeWorkspaceSwitcher.showTreeView": false,
    "window.commandCenter": false,
    "wordcounter.languages": [
        "markdown",
        "plaintext"
    ],
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#F44336",
        "activityBarBadge.background": "#F44336",
        "breadcrumb.activeSelectionForeground": "#F44336",
        "editor.findMatchBorder": "#F44336",
        "editorCursor.foreground": "#EEFFFF",
        "editorHint.foreground": "#ff0000",
        "editorSuggestWidget.highlightForeground": "#F44336",
        "editorWidget.border": "#F44336",
        "editorWidget.resizeBorder": "#F44336",
        "list.activeSelectionForeground": "#F44336",
        "list.highlightForeground": "#F44336",
        "list.inactiveSelectionForeground": "#F44336",
        "menu.selectionForeground": "#F44336",
        "menubar.selectionForeground": "#F44336",
        "notificationLink.foreground": "#F44336",
        "panelTitle.activeBorder": "#F44336",
        "peekView.border": "#F44336",
        "peekViewResult.background": "#1a1a1a",
        "pickerGroup.foreground": "#F44336",
        "progressBar.background": "#F44336",
        "scrollbarSlider.activeBackground": "#F4433650",
        "selection.background": "#F4433640",
        "settings.headerForeground": "#F44336",
        "settings.modifiedItemIndicator": "#F44336",
        "statusBar.debuggingBackground": "#F44336",
        "statusBarItem.remoteBackground": "#C6FF00", // material theme "acid lime"
        "tab.activeBorder": "#F44336",
        "textLink.foreground": "#F44336"
    },
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.languageDetection": false,
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.editor.tabSizing": "fixed",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 15,
    "workbench.editor.empty.hint": "hidden",
    "mypy-type-checker.reportingScope": "workspace",
    "editor.cursorSurroundingLines": 999,
    "markdown.preview.scrollEditorWithPreview": false,
    "git.openRepositoryInParentFolders": "never",
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "terminal.integrated.tabs.enabled": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.telemetry.enabled": false,
    "gitlens.advanced.quickPick.closeOnFocusOut": false,
    "scm.autoReveal": false,
    "gitlens.defaultGravatarsStyle": "mp",
    "gitlens.ai.experimental.provider": "openai",
    "gitlens.ai.experimental.openai.model": "gpt-3.5-turbo-1106",
    "gitlens.views.commitDetails.files.layout": "list",
    "scm.showActionButton": false,
    "scm.showOutgoingChanges": "never",
    "scm.showIncomingChanges": "never",
    "scm.repositories.visible": 0,
    "workbench.layoutControl.enabled": false,
    "scm.showChangesSummary": false,
    "scm.showInputActionButton": false,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "search.useParentIgnoreFiles": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "yaml.schemas": {
        "Kubernetes": [
            "deployment.yaml"
        ],
    },
    "debug.inlineValues": "off",
    "vscode-kubernetes.kubectl-path-mac": "/usr/local/bin/kubectl",
    "editor.minimap.enabled": false,
    "ruff.lint.run": "onSave",
    "workbench.activityBar.location": "hidden"
}
